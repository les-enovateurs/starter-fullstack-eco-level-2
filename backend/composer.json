{
  "name": "starter-fullstack-eco-level-2/backend",
  "description": "API Backend pour l'application d'événements",
  "type": "project",
  "require": {
    "php": "^8.0",
    "slim/slim": "^4.0",
    "slim/psr7": "^1.5",
    "illuminate/database": "^10.0",
    "vlucas/phpdotenv": "^5.4",
    "monolog/monolog": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "pestphp/pest": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "scripts": {
    "start": "php -S localhost:8000 -t public",
    "test": "pest"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
